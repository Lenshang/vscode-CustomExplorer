{
	"name": "customexplorer",
	"displayName": "CustomExplorer",
	"description": "",
	"version": "0.0.1",
	"publisher": "LenShang",
	"repository":"https://github.com/Lenshang/vscode-CustomExplorer",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:myexplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "customexplorer.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "customexplorer.showInfo",
				"title": "Show Information"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "myexplorer",
					"name": "CustomExplorer"
				}
			]
		},
		"configuration": [{
			"title": "Custom Explorer Configuration",
			"properties": {
				"custom-explorer.content": {
					"type": "array",
					"default": [
						{
							"label":"请先点我",
							"content":"请在项目的VSCODE设置中配置custom-explorer.content选项!"
						},
						{
							"label":"关于",
							"content":"2020 LenShang"
						},
						{
							"label":"文件夹测试",
							"content":[
								{
									"label":"文件夹下的CSS文件",
									"path":"D:/vscode.css"
								}
							]
						}
					],
					"description": "Custom Explorer Configuration."
				}
			}
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}